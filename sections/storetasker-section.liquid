		{
			"type":		"text",
			"id":		"title",
			"label":	"Title"
		},
		{
			"type":		"textarea",
			"id":		"description",
			"label":	"Description"
		},
		{
			"type": "text",
			"id": "button",
			"label": "Button Text"
		},
		{
			"type":		"header",
			"content":	"Background"
		},
		{
            "type": 	"color",
            "id": 		"color_background",
            "label": 	"Background Color",
            "default": 	"#edf4fe"
        },
		{
            "type": 	"image_picker",
            "id": 		"image_background",
            "label": 	"Background Image"
        },
		{
			"type":		"header",
			"content":	"Font Color"
		},
		{
            "type": 	"color",
            "id": 		"font_color",
            "label": 	"Font Color",
            "default": 	"#fff"
        }
	],
	"presets":	[
		{
			"name":		"Free Trial Hero",
