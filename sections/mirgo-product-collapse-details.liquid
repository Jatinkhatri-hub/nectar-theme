<div class="section-container">
  <div class="page-width">
    <div class="section-content">
      {% if section.settings.title != blank or section.settings.desc != blank %}
      <div class="section-header-content">
        <h2>{{ section.settings.title }}</h2>
        {{ section.settings.desc }}
      </div>
      {% endif %}
    </div>
    {% if section.blocks.size > 0 %}
    <div class="section-collapse-container">
      <div class="section-collapse-row">
        {% for block in section.blocks %}
        {% if block.settings.collapse_title != blank or block.settings.collapse_desc != blank %}
        <div class="section-collapse-column {% if forloop.first %}active{%endif %}">
          <div class="collapse-header">
            <h4>{{ block.settings.collapse_title }}</h4>
            <div class="close">
              <a href="javascript:void(0)" class="custom-plus {% if forloop.first %}active{%endif %}"></a>
            </div>
          </div>
          <div class="collapse-content">
			{{ block.settings.collapse_desc }}
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endif %}
    {% if section.settings.btn_label != blank or section.settings.btn_link != blank %}
    <div class="section-button">
      <a href="/pages/faq" class="link_underline">{{ section.settings.btn_label }}</a>
    </div>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Mirgo Collapse Details",
	"class": "mirgo-collapse-details",
    "settings": [
		{
          "type":		"header",
          "content":	"Collapse header"
        },
        {
          "type":		"text",
          "id":			"title",
          "label":		"Title"
        },
        {
          "type":		"richtext",
          "id":			"desc",
          "label":		"Description"
        },
		{
            "type":		"header",
            "content":	"Buttons"
        },
        {
            "type":		"text",
            "id":		"btn_label",
            "label":	"Label"
        },
		{
            "type":		"text",
            "id":		"btn_link",
            "label":	"Link"
        }
	],
	"blocks":	[
		{
			"type":	"text",
			"name":	"Collapse",
			"settings":	[
				{
					"type":		"header",
					"content":	"Collapse Block"
				},
				{
					"type":		"text",
					"id":		"collapse_title",
					"label":	"Title"
				},
				{
					"type":		"richtext",
					"id":		"collapse_desc",
					"label":	"Description"
				}
			]
		}
	]
  }
{% endschema %}

